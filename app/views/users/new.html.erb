<h2>Sign Up</h2>

<div>
  <%= form_for @user, url: {action: 'create', method: :post} do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
      <div><%= f.check_box :type, {}, checked_value = "Teacher", unchecked_value = "Student" %></div>
      <%= f.submit 'SignUp' %>
  <% end %>
</div>
